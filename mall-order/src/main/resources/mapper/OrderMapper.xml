<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wfaxxdyy.mall.mallorder.dao.OrderMapper">

    <select id="getCartList" resultType="com.wfaxxdyy.mallinterface.bean.CartBean">
        select * from cart where username=#{username}
    </select>

    <insert id="addCart">
        insert into cart (username,p_name,p_money,p_image,productNum) values(#{username},#{p_name},#{p_money},#{p_image},#{productNum})
    </insert>

    <update id="updateCartList">
        update cart set productNum=(productNum+1) where username=#{username} and p_name=#{p_name}
    </update>
</mapper>
